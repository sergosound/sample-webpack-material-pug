html(lang="en")
  head
    script.
      var calcFontSize = function () {
        var dWidth = window.innerWidth;
        var fontSize;
        if( dWidth > 1024) {
          fontSize = dWidth/1440;
        }
       else if (window.innerHeight > window.innerWidth) {
          fontSize = (dWidth/375) * (window.innerWidth/window.innerHeight < 0.72 ? 1 : 0.8);
        }
        else {
          fontSize = dWidth/667 * (window.innerHeight/window.innerWidth < 0.72 ? 1 : 0.8);
        }
        document.getElementsByTagName('html')[0].style.fontSize = '' + fontSize + 'rem';
     };
     calcFontSize();
     window.onresize = calcFontSize;
    title Profile
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet" href="css/style.css")
    link(rel="stylesheet" href="plugins/bootstrap/dist/css/bootstrap.css")
  body
    .container-fluid.flex-parent
      include modules/header

      .row.margin-fixed.flex-content
        .col-xl-4.col-lg-5.col-md-6.col-12.left-bar
          .left-padding
            .left-bar__cont-width
              h1.title.top-56
                  | Your Profile
              p.subtitle
                | We use this information to help ensure trust and ensure safety on Taxgig.
        .col-xl-6.col-lg-5.col-md-6.col-12.right-bar.offset-md-0.offset-lg-1
          .right-padding
            .row
              .col-lg-12
                h3.title3
                  | Add your profile photo
                p.subtitle
                  | Make a good first impression. Upload a clear photo of yourself.
                .add
                  button.mdc-fab(aria-label="Favorite")
                    span.material-icons.mdc-fab__icon +
                  span.act
                    | Add photo
            .row
              .col-xl-6.col-12
                h3.title3
                  | Enter your full name
                p.subtitle
                  | We need this information to secure your profile.
                form(action="#").mt-48
                  .input-wrap
                    label.l-name Name
                    input.prof-input(type="text" placeholder="Valentin" maxlength="20" required)
  
                  .input-wrap
                    label.l-name Second name
                    input.prof-input(type="text" placeholder="Karantin" maxlength="20" required)

                  .input-wrap
                    label.l-name Middle name
                    input.prof-input(type="text" placeholder="Oleg" maxlength="20" required)
              .col-xl-6.col-12
                h3.title3
                  | Enter main information about you
                p.subtitle
                  | It will help ensure trust and safety on Taxgig.
                form(action="#").mt-48
                  .input-wrap
                    label.l-name ZIP
                    span.city-check New York, NY
                    input.prof-input(type="text" placeholder="00000" maxlength="5" required)

                  .input-wrap
                    label.l-name SSN
                    input.prof-input(type="text" placeholder="000-00-0000" maxlength="9" required)

                  .input-wrap
                    label.l-name Spoken languages
                    img.arrow-select(src="img/arrow-down.svg", alt="")
                    label.select(for='select')
                      input.drop-down#bg(type='radio', name='list', value='not_changed', checked='')
                      input.drop-down#select(type='radio', name='list', value='not_changed')
                      label.bg(for='bg')
                      .items
                        input.drop-down(type='radio', name='list', value='first_value', id='list[0]')
                        label.drop-down(for='list[0]') Russian
                        span#text English

                .your-lang
                  span English
                  img.lang-close(src="img/lang-close.svg", alt="") 
      include modules/footer1

    script(type="text/javascript" src="plugins/jquery/dist/jquery.min.js")
    script(type="text/javascript" src="plugins/bootstrap/dist/js/bootstrap.min.js")   
    script(type="text/javascript" src="js/script.js")